{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@org-workspace/ai-service": ["libs/ai-service/src/index.ts"],
      "@org-worspace/database": ["libs/database/src/index.ts"],
      "@org-workspace/vector-service": ["libs/vector-service/src/index.ts"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"]
  }
}
